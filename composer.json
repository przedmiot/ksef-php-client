{
    "name": "n1ebieski/ksef-php-client",
    "description": "PHP API client that allows you to interact with the API Krajowego Systemu e-Faktur",
    "version": "0.11.4",
    "license": "MIT",
    "authors": [
        {
            "name": "Mariusz WysokiÅ„ski",
            "homepage": "https://intelekt.net.pl",            
            "email": "kontakt@intelekt.net.pl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "php-http/discovery": "^1.20.0",
        "psr/http-client": "^1.0.3",
        "psr/http-client-implementation": "^1.0.1",
        "psr/http-factory-implementation": "*",
        "psr/http-message": "^1.1.0|^2.0.0",
        "cuyz/valinor": "^1.15",
        "krowinski/bcmath-extended": "^6.0",
        "psr-discovery/log-implementations": "^1.0",
        "phpseclib/phpseclib": "^3.0",
        "endroid/qr-code": "^5.1"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^5.6",
        "guzzlehttp/guzzle": "^7.9.2",
        "guzzlehttp/psr7": "^2.7.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0",
        "monolog/monolog": "^3.9",
        "dg/bypass-finals": "^1.9",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.36",
        "pestphp/pest-plugin-drift": "^2.5",
        "friendsofphp/php-cs-fixer": "^3.88"        
    },
    "autoload": {
        "psr-4": {
            "N1ebieski\\KSEFClient\\": "src/"
        } 
    },
    "autoload-dev": {
        "psr-4": {
            "N1ebieski\\KSEFClient\\Tests\\": "tests/"
        }
    },    
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "build": [
            "Composer\\Config::disableProcessTimeout",
            "bash ./build.sh"
        ],
        "phpstan": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse > var/logs/phpstan.log"
        ],
        "cs-fixer": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/php-cs-fixer fix --allow-unsupported-php-version=yes"
        ],
        "rector": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process"
        ],
        "rector-dry": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process --dry-run > var/logs/rector.log"
        ],
        "pest": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/pest --parallel > var/logs/pest.log"
        ]
    }
}
